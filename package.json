{
  "private": true,
  "name": "@uzh-bf/code-style",
  "description": "Consistent code style setup for UZH-BF projects",
  "version": "0.0.4",
  "repository": {
    "type": "git",
    "url": "https://gitlab.uzh.ch/uzh-bf/common/code-style"
  },
  "maintainers": [
    "Roland Schlaefli <roland.schlaefli@bf.uzh.ch>"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "publish": "npm-run-all --parallel publish:react-js publish:react-ts",
    "publish:react-js": "cd packages/react-js && npm publish",
    "publish:react-ts": "cd packages/react-ts && npm publish"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
